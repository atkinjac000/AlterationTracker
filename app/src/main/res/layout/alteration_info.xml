<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/customerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Customer Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="John Doe"
        app:layout_constraintBottom_toBottomOf="@+id/customerNameLabel"
        app:layout_constraintStart_toEndOf="@+id/customerNameLabel"
        app:layout_constraintTop_toTopOf="@+id/customerNameLabel" />

    <TextView
        android:id="@+id/suitAlterationsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Suit Alterations: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerNameLabel" />

    <TextView
        android:id="@+id/suitAlterations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="alterations here"
        app:layout_constraintBottom_toBottomOf="@+id/suitAlterationsLabel"
        app:layout_constraintStart_toEndOf="@+id/suitAlterationsLabel"
        app:layout_constraintTop_toTopOf="@+id/suitAlterationsLabel" />

    <TextView
        android:id="@+id/pantAlterationsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Pant Alterations:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suitAlterationsLabel" />

    <TextView
        android:id="@+id/pantAlterations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="alterations here"
        app:layout_constraintBottom_toBottomOf="@+id/pantAlterationsLabel"
        app:layout_constraintStart_toEndOf="@+id/pantAlterationsLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>